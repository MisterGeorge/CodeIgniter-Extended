<!DOCTYPE html>
<!--[if IE 7]><html class="no-js lt-ie11 lt-ie10 lt-ie9 lt-ie8" lang="{{ current_lang('code')|lower }}" dir="{{ current_lang('direction')|lower }}"> <![endif]-->
<!--[if IE 8]><html class="no-js lt-ie11 lt-ie10 lt-ie9" lang="{{ current_lang('code')|lower }}" dir="{{ current_lang('direction')|lower }}"> <![endif]-->
<!--[if IE 9]><html class="no-js lt-ie11 lt-ie10" lang="{{ current_lang('code')|lower }}" dir="{{ current_lang('direction')|lower }}"> <![endif]-->
<!--[if IE 10]><html class="no-js lt-ie11" lang="{{ current_lang('code')|lower }}" dir="{{ current_lang('direction')|lower }}"> <![endif]-->
<!--[if gt IE 10]><!--><html class="no-js" lang="{{ current_lang('code')|lower }}" dir="{{ current_lang('direction')|lower }}"> <!--<![endif]-->
<head>
    <meta charset="{{ current_lang('charset')|lower }}">
    <title>{% block title %}{{ __("Welcome to CodeIgniter") }}{% endblock %}</title>
    
    {{ meta('description', config('site.description')) }}
    {{ meta('keywords', config('site.keywords')) }}
{% if config('google.verification') %}

    <!-- Google Site Verification -->
    {{ meta('google-site-verificatio', config('google.verification')) }}
{% endif %}

        <!-- Open Graph -->
{% if config('facebook.app_id') %}
    <meta property="fb:app_id" content="{{ config('facebook.app_id') }}">
{% endif %}
    <meta property="og:title" content="{{ config('site.name') }}">
    <meta property="og:description" content="{{ config('site.description') }}">
    <meta property="og:type" content="website">
    <meta property="og:locale" content="{{ current_lang('locale') }}">
    <meta property="og:site_name" content="{{ config('site.name') }}">
{% if config('facebook.image') %}
    <meta property="og:image" content="{{ img_url(config('facebook.image')) }}">
    <meta property="og:image:type" content="image/png">
    <meta property="og:image:width" content="1200">
    <meta property="og:image:height" content="1200">
{% endif %}
    <meta property="og:url" content="{{ base_url() }}">
    <link rel="canonical" href="{{ base_url() }}">
{% for lang in languages() if lang.folder != current_lang('folder') %}
    <link rel="alternate" hreflang="{{ lang.code }}" href="{{ site_url('process/lang') }}/{{ lang.code }}?redirect={{ current_url()|url_encode }}">
{% endfor %}

{% if config('site.use_cdn') %}
    {{ css('http://static.ianhub.com/dinakit/css/dinakit.css') }}
{% else %}
    {{ css('dinakit') }}
{% endif %}
    {{ css('style') }}
    <script type="text/javascript">
      var config = {
        site_url: "{{ site_url() }}",
        ajax_url: "{{ site_url('ajax') }}",
        base_url: "{{ base_url() }}",
        current_url: "{{ current_url() }}",
        lang: "{{ current_lang('code') }}",
      };
    </script>
</head>
<body>
{% if config('google.analytics') %}
<script>
  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
  ga('create', '{{ config("google.analytics") }}', 'auto');
  ga('send', 'pageview');
</script>
{% endif %}

{% block contents %}{% endblock %}

{% if config('site.use_cdn') %}
    <script type="text/javascript" src="http://code.jquery.com/jquery-latest.min.js"></script>
    <script type="text/javascript" src="http://static.ianhub.com/dinakit/js/dinakit.js"></script>
{% else %}
    {{ js('vendor/jquery.min') }}
    {{ js('dinakit') }}
{% endif %}
    {{ js('main') }}
</body>
</html>